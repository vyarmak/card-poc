{
  "name": "card-poc",
  "version": "0.0.1",
  "description": "card-poc",
  "private": true,
  "scripts": {
    "start": "NODE_PATH=node_modules:src node src/server/index.js",
    "debug": "NODE_PATH=node_modules:src node --inspect src/server/index.js",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vyarmak/card-poc.git"
  },
  "author": "Viktor Yarmak <viktor.yarmak@gmail.com>",
  "bugs": {
    "url": "https://github.com/vyarmak/card-poc/issues"
  },
  "homepage": "https://github.com/vyarmak/card-poc#readme",
  "dependencies": {
    "@mysql/xdevapi": "^8.0.8",
    "body-parser": "^1.18.2",
    "check-tool": "^1.0.1",
    "connect-busboy": "0.0.2",
    "express": "^4.16.0",
    "morgan": "^1.9.0",
    "path": "^0.12.7",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.7.2"
  },
  "devDependencies": {
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-config-recommended": "^2.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.4.0",
    "mocha": "^3.5.3"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "eslintIntegration": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true,
      "es6": true,
      "mocha": true
    },
    "plugins": [
      "import"
    ],
    "extends": [
      "eslint:recommended",
      "airbnb"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js"
          ],
          "moduleDirectory": [
            "node_modules",
            "src"
          ]
        }
      },
      "import/extensions": "ignorePackages"
    },
    "rules": {
      "jsx-a11y/href-no-hash": "off",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "log",
            "warn"
          ]
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "[oO]ptions"
        }
      ],
      "arrow-parens": [
        "error",
        "always"
      ]
    }
  }
}
